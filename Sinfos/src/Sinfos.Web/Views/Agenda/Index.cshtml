@model IEnumerable<Sinfos.Core.Domain.Agenda>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <h1>Consulta</h1>
</div>


<div>   
     <a class="btn btn-secondary btn-sm" asp-action="Create">Crear Agendamiento</a>    
</div>
<hr />

<div class="table-responsive-sm">
    <table class="table table-striped table-sm">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hora_inicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hallazgo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hora_inicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hallazgo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Id)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" >Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
